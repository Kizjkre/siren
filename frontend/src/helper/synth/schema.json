{
  "$id": "schema.json",
  "title": "Synth",
  "description": "A synth.",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the synth.",
      "type": "string"
    },
    "nodes": {
      "description": "List of nodes",
      "type": "array",
      "items": {
        "description": "Node definition.",
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "name": {
                "description": "Name of the node.",
                "type": "string",
                "not": {
                  "enum": ["context"]
                }
              },
              "type": {
                "description": "Type of node.",
                "type": "string",
                "enum": ["OscillatorNode", "GainNode", "StereoPannerNode", "ConstantSourceNode"]
              }
            },
            "required": ["name", "type"]
          },
          {
            "properties": {
              "name": {
                "description": "Name of the node.",
                "type": "string",
                "not": {
                  "enum": ["context"]
                }
              },
              "type": {
                "description": "Type of node.",
                "type": "string",
                "enum": ["ConvolverNode"]
              },
              "impulseResponse": {
                "description": "Relative path to the impulse response associated with the convolver.",
                "type": "string"
              }
            },
            "required": ["name", "type", "impulseResponse"]
          }
        ]
      }
    },
    "connections": {
      "description": "Directed connection between nodes.",
      "type": "array",
      "items": {
        "description": "Connection definition.",
        "type": "object",
        "oneOf": [
          {
            "patternProperties": {
              "^.+$": {
                "description": "<From>: <To>",
                "type": "string",
                "enum": { "$data": "1/properties/nodes/items/properties/name" }
              }
            }
          },
          {
            "patternProperties": {
              "^.+$": {
                "description": "<From>: <To>",
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Node name.",
                    "type": "string",
                    "enum": { "$data": "1/properties/nodes/items/properties/name" }
                  },
                  "parameter": {
                    "description": "Node param. Should be an AudioParam.",
                    "type": "string"
                  }
                }
              }
            }
          }
        ],
        "propertyNames": {
          "enum": { "$data": "1/properties/nodes/items/properties/name" }
        }
      }
    },
    "variables": {
      "description": "Initializing input variables.",
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "description": "<Variable>: <Value>",
          "type": "number",
          "minimum": 0
        }
      }
    },
    "inputs": {
      "description": "Entry points to connect tracks to.",
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "description": "<Expression>: {[ node: <Node>, parameter: <Param> }]",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "node": {
                "description": "Node to apply expression to.",
                "type": "string"
              },
              "parameter": {
                "description": "Parameter to apply expression to",
                "type": "string"
              }
            },
            "required": ["node", "parameter"]
          }
        }
      },
      "propertyNames": {
        "enum": { "$data": "1/properties/nodes/items/properties/name" }
      }
    },
    "adsrd": {
      "description": "Defines the ADSR-D envelope.",
      "type": "object",
      "properties": {
        "values": {
          "description": "ADSR-D values.",
          "type": "array",
          "items": {
            "description": "Attack, decay, sustain, release, and duration values.",
            "type": "number",
            "minimum": 0
          },
          "minItems": 5,
          "maxItems": 5
        },
        "nodes": {
          "description": "Node(s) for the ADSR-D to operate on.",
          "type": "array",
          "items": {
            "description": "Node names.",
            "type": "object",
            "properties": {
              "node": {
                "description": "Node name.",
                "type": "string",
                "enum": { "$data": "1/properties/nodes/items/properties/name" }
              },
              "parameter": {
                "description": "Parameter to apply expression to",
                "type": "string"
              }
            },
            "required": ["node", "parameter"]
          }
        }
      },
      "required": ["values", "nodes"]
    }
  },
  "required": ["name", "nodes", "connections", "variables", "inputs", "adsrd"]
}
